<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:padding="16dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/nombreAdulto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del adulto"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/temperaturaActual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="36.6°C"
                android:textSize="16sp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginHorizontal="8dp"
                android:background="#CCCCCC"/>

            <TextView
                android:id="@+id/presionActual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="78 bpm"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- Sección de recordatorios (simplificada) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Recordatorios"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/recordatorioActual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medicamento a las 10:00 AM"
            android:layout_marginTop="4dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>